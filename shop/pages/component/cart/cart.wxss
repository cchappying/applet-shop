/* pages/component/cart/cart.wxss */
@import '../../common/common.wxss';
.cart-box{
    padding-bottom: 100rpx;
}
.cart-list{
    padding: 20rpx 20rpx 20rpx 300rpx;
    position: relative;
    height: 185rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}
.cart-thumb{
    width:190rpx;
    height:190rpx;
    position: absolute;
    top:20rpx;
    left: 90rpx;
}
.cart-list .cart-pro-name{
    display: block;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.cart-list .cart-pro-price{
    display: block;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 26rpx;
}
.cart-count-box{
    position: absolute;
    left: 300rpx;
    bottom: 10rpx;
    width: 250rpx;
    height: 80rpx;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 80rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    font-size: 44rpx;
    width: 50rpx;
    height: 100%;
}
.cart-count-num{
    width: 150rpx;
}
.cart-del{
    position: absolute;
    right: 20rpx;
    bottom: 10rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 44rpx;
}

.cart-footer{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	background: #AB956D;
	padding: 0 100rpx 0 80rpx;
	color: #fff;
	box-sizing: border-box;
	position: fixed;
	left: 0;
	bottom: 0;
}
.cart-footer .total-select{
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	top:25rpx;
	left: 30rpx;
}
.cart-footer .cart-toatl-price{
	display: block;
	float: right;
}
.cart-footer .order-icon{
	width:42rpx;	
	height: 40rpx;
	position: absolute;
	top:25rpx;
	right: 10rpx;
}
.cart-footer .btn-order{
	display: block;
	width: 100%;
	height: 100%;
}
.cart-footer .order-icon image{
	display: block;
	width: 100%;
	height: 100%;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}